<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_categories/models/fields">
		<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
		       readonly="true" class="readonly"
		       description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="name" type="text" class="inputbox"
		       size="60" label="COM_CWMPRAYER_NAME"
		       description="COM_CWMPRAYER_NAME_DESC" required="true"/>
		<field name="alias" type="text" class="inputbox"
		       size="60" label="JFIELD_ALIAS_LABEL"
		       description="JFIELD_ALIAS_DESC" required="true"/>
		<field name="published" type="list"
		       label="JSTATUS" description="JFIELD_PUBLISHED_DESC"
		       class="chzn-color-state" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
		<field name="url" type="url" class="inputbox"
		       size="60" label="COM_CWMPRAYER_URL"
		       description="COM_CWMPRAYER_URL_DESC" required="true"/>
		<field name="target" type="LinkTarget"
		       label="COM_CWMPRAYER_TARGET" description="COM_CWMPRAYER_TARGET_DESC"
		       class="inputbox" default=""/>
	</fieldset>
	<fieldset addfieldpath="/administrator/components/com_categories/models/fields">
		<field name="catid"
		       type="categoryedit"
		       label="JCATEGORY"
		       description="JFIELD_CATEGORY_DESC"
		       extension="COM_CWMPRAYER"
		       class="inputbox" default=""/>
	</fieldset>
</form>