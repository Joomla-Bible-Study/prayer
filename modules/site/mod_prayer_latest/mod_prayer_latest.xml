<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.3" client="site" method="upgrade">
	<name>MOD_CWMPRAYER_LATEST</name>
	<author>Joomla Bible Study Team</author>
	<creationDate>April 2017</creationDate>
	<copyright>(C) 2017 Joomla Bible Study. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>info@joomlabiblestudy.com</authorEmail>
	<authorUrl>www.joomlabiblestudy.com</authorUrl>
	<version>4.0</version>
	<description>MOD_CWMPRAYER_LATEST_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_prayer_latest">mod_prayer_latest.php</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="MOD_CWMPRAYER_LATEST_FIELD_MODCLASS_LABEL"
				       description="MOD_CWMPRAYER_MENU_FIELD_MODCLASS_DESC"/>
				<field name="@spacer" type="spacer" default="" label="" description=""/>
				<field name="count" type="text" size="6" default="3" label="MOD_CWMPRAYER_LATEST_FIELD_COUNT_LABEL"
				       description="MOD_CWMPRAYER_LATEST_FIELD_COUNT_DESC"/>
				<field name="word_count" type="text" size="6" default="12"
				       label="MOD_CWMPRAYER_LATEST_FIELD_WORDCOUNT_LABEL"
				       description="MOD_CWMPRAYER_LATEST_FIELD_WORDCOUNT_DESC"/>
			</fieldset>
			<fieldset name="advanced">
				<field name="cache" type="list" default="0" label="MOD_CWMPRAYER_LATEST_FIELD_CACHE_LABEL"
				       description="MOD_CWMPRAYER_MENU_FIELD_CACHE_DESC">
					<option value="1">MOD_CWMPRAYER_LATEST_FIELD_CACHETIME_OPTION1_LABEL</option>
					<option value="0">MOD_CWMPRAYER_LATEST_FIELD_CACHETIME_OPTION2_LABEL</option>
				</field>
				<field name="cache_time" type="text" default="15" label="MOD_CWMPRAYER_LATEST_FIELD_CACHETIME_LABEL"
				       description="MOD_CWMPRAYER_MENU_FIELD_CACHETIME_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>